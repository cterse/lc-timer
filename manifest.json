{
    "name": "Leetcode Timer",
    "version": "1.0",
    "description": "Timer for Leetcode questions.",
    
    "icons": {
        "128": "assets/images/icon128.png"
    },

    "permissions": ["storage"],

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["https://*.leetcode.com/problems/*"],
            "js": ["content-scripts/problem_utils.js", "content-scripts/content.js"]
        }
    ],

    "browser_action": {
        "default_icon": {
            "128": "assets/images/icon128.png"
        },
        "default_title": "Leetcode Timer",
        "default_popup": "popup/popup.html"
    },

    "manifest_version": 2
    
}